                            <div class="w3-container">
                                <h6 class="w3-opacity">Name</h6>
                                <p contenteditable="true" class="w3-border w3-padding">Hieu</p>
                            </div><div class="w3-container">
                                <h6 class="w3-opacity">Falcuty</h6>
                                <p contenteditable="true" class="w3-border w3-padding">IT</p>
                            </div>

                            <div class="w3-container w3-half">
                                <h6 class="w3-opacity">Gender</h6>
                                <p contenteditable="true" class="w3-border w3-padding">Male</p>
                            </div>
                            <div class="w3-container w3-half">
                                <h6 class="w3-opacity">Role</h6>
                                <p contenteditable="false" class="w3-border w3-padding">MM</p>
