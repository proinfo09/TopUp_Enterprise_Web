@model IEnumerable<Enterprise_Web.Models.UserRoleViewModel>

@{
    ViewBag.Title = "Users With Roles";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
<link href="~/Content/DataTables/css/responsive.dataTables.min.css" rel="stylesheet" />
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
@*<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>*@

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="box-title">
            <b>Users with Roles</b>
        </h3>
    </div>
    <!-- /.box-header -->
    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="UsersWithRoles">
            <thead>
                <tr>
                    <th><b>Username</b></th>
                    <th><b>Email</b></th>
                    <th><b>Roles</b></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@Html.DropDownListFor(u => user.Role, ViewBag.Role as SelectList)</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>

    <div class="panel-footer">
        <p class="box-title"><b>Total Users till @String.Format("{0 : dddd, MMMM d, yyyy}", DateTime.Now)  : </b><span class="label label-primary">@Model.Count()</span></p>
    </div>
</div>


@section scripts{
    <script>
        $(document).ready(function () {
            // Setup - add a text input to each footer cell
            $('#UsersWithRoles thead tr').clone(true).appendTo('#UsersWithRoles thead');
            $('#UsersWithRoles thead tr:eq(1) th').each(function (i) {
                var title = $(this).text();
                $(this).html('<input type="text" placeholder="Search ' + title + '" />');

                $('input', this).on('keyup change', function () {
                    if (table.column(i).search() !== this.value) {
                        table
                            .column(i)
                            .search(this.value)
                            .draw();
                    }
                });
            });

            var table = $('#UsersWithRoles').DataTable({
                "orderCellsTop": true,
                "fixedHeader": true,
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                "responsive": {
                    details: false
                },
                dom: 'Qfrtip',
                "searchBuilder": {
                    conditions: {
                        num: {
                            'between': {
                                search: function (value, comparison) {
                                    // Depending on which input element is bigger will change the comparisons that need to be made
                                    if (+comparison[0] < +comparison[1]) {
                                        return +comparison[0] <= +value && +value <= +comparison[1];
                                    }
                                    else {
                                        return +comparison[1] <= +value && +value <= +comparison[0];
                                    }
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
    <script>
        $("table tbody").on("click", ".updatebutton", function () {
            var userId = $(this).closest("tr").find("td").eq(0).text().trim();
            $.ajax({
                url: "@Url.Action("UpdateRole")",
                data: {
                    UserId: userId,
                    RoleId: $("#Role").val()
                },
                success: function (data) {
                    alert(data);
                    location.reload(true);
                }
            });
        });
    </script>
